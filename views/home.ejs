<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>URL Shortener</h1>
      <a href="/user/logout" class="button btn-secondary" style="padding: 0.5rem 1rem; border-radius: 0.75rem; border: 1px solid var(--border); color: var(--text-main);">Logout</a>
    </div>
    
    <% if (locals.id) { %>
      <div class="generated-url">
        <p>URL Generated: <a href="http://localhost:8002/url/<%= id %>" target="_blank">http://localhost:8002/url/<%= id %></a></p>
      </div>
    <% } %>

    <div class="card flex-center">
      <form method="POST" action="/url">
        <label>Enter Your Original URL</label>
        <input 
          type="url" 
          name="url" 
          placeholder="https://example.com"
          required
        />
        <button type="submit" style="margin-top: 1rem;">Generate Short URL</button>
      </form>
    </div>

    <% if (locals.urls) { %>
      <div class="card">
        <h2>Your URLs</h2>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>S.No</th>
                <th>Short ID</th>
                <th>Redirect URL</th>
                <th>Visits</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% urls.forEach((url,index) => { %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= url.shortId %></td>
                  <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
                  <td><%= url.visitHistory.length %></td>
                  <td>
                    <form method="POST" action="/url/delete/<%= url._id %>" class="form-inline">
                      <button type="submit" class="btn-danger">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>